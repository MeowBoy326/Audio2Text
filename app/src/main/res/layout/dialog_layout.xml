<!-- dialog_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border_popup"
    android:padding="16dp">

    <!-- Copier -->
    <TextView
        android:id="@+id/copy_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:layout_gravity="center_vertical"
        android:text="Copier"
        android:enabled="false"
        android:padding="8dp"
        app:drawableStartCompat="@drawable/resized_copy_icon"
        app:drawableTint="@color/fab_menu_icon" />

    <!-- Editer -->
    <TextView
        android:id="@+id/edit_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawablePadding="16dp"
        android:text="Verrouiller"
        android:enabled="false"
        android:padding="8dp"
        app:drawableStartCompat="@drawable/resized_edit_icon"
        app:drawableTint="@color/fab_menu_icon"  />

    <!-- Corriger -->
    <TextView
        android:id="@+id/correct_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawablePadding="16dp"
        android:text="Corriger"
        android:enabled="false"
        android:padding="8dp"
        app:drawableStartCompat="@drawable/resized_correct_icon"
        app:drawableTint="@color/fab_menu_icon" />

    <!-- Exporter -->
    <TextView
        android:id="@+id/export_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawablePadding="16dp"
        android:enabled="false"
        android:text="Exporter"
        android:padding="8dp"
        app:drawableStartCompat="@drawable/resized_export_icon"
        app:drawableTint="@color/fab_menu_icon"  />

</LinearLayout>