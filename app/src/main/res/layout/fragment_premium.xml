<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textPremium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:text="Abonnez-vous pour plus de fonctionnalités !"
            android:textSize="25sp" />

        <!-- Tableau -->
        <TableLayout
            android:id="@+id/compare_functions_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_centerInParent="true"
            android:layout_above="@id/subscription_layout"
            android:layout_marginTop="16dp"
            android:stretchColumns="*">

            <!-- En-tête du tableau -->
            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:background="@color/black"
                    android:textStyle="bold"
                    android:text="Option" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorEnabled"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Gratuit"
                    android:textColor="#546E7A"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/color_selected"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Premium" />
            </TableRow>

            <TableRow android:background="@drawable/cell_border_top_sides">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Aucune Pub" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:maxHeight="40dp"
                    android:visibility="invisible"
                    android:adjustViewBounds="true"
                    android:padding="8dp"
                    android:src="@drawable/check_icon" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:maxHeight="40dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:src="@drawable/check_icon" />
            </TableRow>

            <!-- Lignes du tableau (Répétez cette partie pour chaque fonctionnalité) -->
            <TableRow android:background="@drawable/cell_border_top_sides">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Transcrire audio / vidéo" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:maxHeight="40dp"
                    android:adjustViewBounds="true"
                    android:padding="8dp"
                    android:src="@drawable/check_icon" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:maxHeight="40dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:src="@drawable/check_icon" />
            </TableRow>

            <TableRow android:background="@drawable/cell_border_top_sides">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Transcrire par partie" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:maxHeight="40dp"
                    android:visibility="invisible"
                    android:adjustViewBounds="true"
                    android:padding="8dp"
                    android:src="@drawable/check_icon" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:maxHeight="40dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:src="@drawable/check_icon" />
            </TableRow>

            <TableRow android:background="@drawable/cell_border_top_sides">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Choisir le modèle d'IA" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:maxHeight="40dp"
                    android:adjustViewBounds="true"
                    android:padding="8dp"
                    android:src="@drawable/check_icon" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:maxHeight="40dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:src="@drawable/check_icon" />
            </TableRow>

            <TableRow android:background="@drawable/cell_border_top_sides">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Ignorer une langue" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:visibility="invisible"
                    android:maxHeight="40dp"
                    android:adjustViewBounds="true"
                    android:padding="8dp"
                    android:src="@drawable/check_icon" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:maxHeight="40dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:src="@drawable/check_icon" />
            </TableRow>

            <TableRow android:background="@drawable/cell_border">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Editer, copier, exporter" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:maxHeight="40dp"
                    android:adjustViewBounds="true"
                    android:padding="8dp"
                    android:src="@drawable/check_icon" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:maxHeight="40dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:src="@drawable/check_icon" />
            </TableRow>
        </TableLayout>

        <!-- Bouton d'abonnement -->
        <LinearLayout
            android:id="@+id/subscription_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:layout_margin="16dp">

            <!-- Texte du prix -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2,99 € / mois"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Bouton d'abonnement -->
            <Button
                android:id="@+id/subscription_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/button_text_color"
                android:text="S'abonner" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" sans engagement"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>